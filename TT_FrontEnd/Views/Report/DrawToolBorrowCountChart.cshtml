@model IEnumerable<TT_FrontEnd.ViewModels.ToolBorrowCountViewModel>


@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tool Borrow Count Chart</title>
</head>
<body>

		@{

			var chartTheme =
@"

<Chart Palette=""SemiTransparent"" AntiAliasing=""All"">
<Titles>
<Title Font=""Trebuchet MS, 20pt, style=Bold"" Text=""Tool Borrow Count Report"">
</Title>
</Titles>
<ChartAreas>
	<ChartArea Name=""Default"" _Template_=""All"" BackGradientStyle=""LeftRight""  BackColor=""maroon"" BorderDashStyle=""Solid"" >

		<AxisX Title=""Tools"" IsLabelAutoFit=""False"" TitleFont=""Trebuchet MS, 16pt, style=Bold"">
			<MajorGrid Interval=""1"" />
			<LabelStyle Angle=""0"" Interval=""1"" ForeColor=""maroon"" Font=""Trebuchet MS, 10pt, style=Bold"" />
		</AxisX>
		
		<AxisY Title=""Times Borrowed"" IsLabelAutoFit=""False"" TitleFont=""Trebuchet MS, 16pt, style=Bold"">
			<LabelStyle Angle=""0"" Interval=""1"" ForeColor=""maroon"" Font=""Trebuchet MS,10, style=Bold"" />
		</AxisY>

	</ChartArea>
</ChartAreas>
</Chart>

";

			

			var chart = new Chart(width: 600, height: 600, theme: chartTheme)
				//	.AddTitle("Tool Borrow Count Report")

				.AddSeries(
				name: "Count",
				chartType: "Bar",


				xValue: Model,
				xField: "ToolName",
				yValues: Model,
				yFields: "BorrowCount");

			
			
			
			chart.Write("png");

		}

</body>
</html>
