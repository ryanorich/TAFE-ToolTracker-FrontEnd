@model TT_FrontEnd.Models.LoanTool

@{
    ViewBag.Title = "AddLoanedTool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddLoanedTool</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
	<h4>LoanTool</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(model => model.ToolID, "ToolID", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DropDownListFor(model => model.ToolID,
					Model.AvailableTools,

					htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.ToolID, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Add" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
	@Html.ActionLink("Back", "Index", null, new { @class = "glyphicon glyphicon-arrow-left" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
